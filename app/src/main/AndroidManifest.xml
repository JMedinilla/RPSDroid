<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmedinilla.rpsdroid">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ClassicGame_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpecialGame_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShopGame_Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".MenuMode_Activity"></activity>
    </application>

</manifest>